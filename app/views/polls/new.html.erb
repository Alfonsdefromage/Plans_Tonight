<html class="bg">
  <body>
    <div class="grid-container">

      <div class="grid-6">
        <h1>YOU'VE BEEN INVITED TO MAKE PLANS TONIGHT!</h1>
        <p>Share how you're feeling to contribute to the bar poll</p>
      </div>

    <%= simple_form_for [@plan, @poll], url: plan_polls_path(@plan), method: :post, html: { class: 'grid-6' } do |f| %>
     <!-- FORM -->

      <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>

      <!-- Hidden Field for Submitted Status -->
          <%= f.input :submitted, as: :hidden, input_html: { value: 'true' } %>

      <!-- QUESTION 1 -->
      <h2 style="margin-top: 24px">WHAT VIBE ARE YOU FEELING?</h2>
        <%= render 'polls/mood', f: f %>

      <!-- QUESTION 2 -->
      <h2 style="margin-top: 24px">WHAT ARE YOU DRINKING?</h2>
          <%= render 'polls/alcohol', f: f %>

      <!-- QUESTION 3 -->
      <h2 style="margin-top: 24px">WILL YOU SMOKE?</h2>
        <%= render 'polls/smoking', f: f %>

      <!-- QUESTION 4 -->
      <h2 style="margin-top: 24px">DO YOU WANT TO EAT THERE?</h2>
        <%= render 'polls/food', f: f %>

      <!-- SUBMIT -->
      <div class="form-group">
        <%= f.button :submit, 'MAKE PLANS', class: 'plans-btn grid-6', style: 'margin-top: 16px;' %>
      </div>

      <% end %>
    </div>
  </body>
</html>
