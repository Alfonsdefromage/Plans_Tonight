<div id="drinking_submitted" class="grid-container m-0" style="display: flex; flex-direction: column;">
  <% { "Craft Beer" => "🍺", "Lemon Sour" => "🍋", "Whiskey" => "🥃", "Cocktail" => "🍹", "Wine" => "🍷", "Anything" => "🥂" }.each do |alcohol, emoji| %>
    <% if plan.polls.where(submitted: true, alcohol: alcohol).exists? %>
      <div>
        <div class="grid-container m-0">
          <div class="grid-1">
            <p style="font-size: 32px;" class="poll-emoji"><%= emoji %></p>
          </div>
          <% plan.polls.where(submitted: true, alcohol: alcohol).each do |poll| %>
            <div class="grid-1">
              <%= render "polls/subpoll", poll: poll %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
