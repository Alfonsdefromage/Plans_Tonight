<div class="bg-homepage">

  <div class="homepage-h3">
    <h3>Plans Tonight</h3>
  </div>

  <div class="homepage-title">
    <h2>MAKE YOUR</h2>
    <h1>PLANS <br>TONIGHT</h1>
  </div>

  <div>
    <% if user_signed_in? %>
      <div class="homepage-element">
        <%= link_to "Create Event", new_plan_path , class: "homepage-button" %>
        <%= link_to "Active Events", user_plans_path(current_user), class: "homepage-button" %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "homepage-button" %>
      </div>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "homepage-button" %>
    <% end %>
  </div>
</div>
