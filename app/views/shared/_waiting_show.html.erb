<div class="container show-title">
  <div class="confirmation-container" style="padding-top: 64px;">
    <div class="show-title">
      <div style="display: flex; align-items: center; white-space: nowrap;">
        <h1>Your</h1>
        <h1 class="yellow-text" style="margin-left: 10px;">Plans Tonight</h1>
      </div>
      <h5 class="card-title"><%= plan.date_time.strftime("%B %d, %H:%M") %></h5>
      <div
        data-controller="countdown"
        data-countdown-deadline-value="<%= plan.deadline.present? ? plan.deadline.strftime('%Y-%m-%dT%H:%M:%S') : '' %>">
        <div data-countdown-target="countdown"></div>
      </div>
    </div>
  </div>
  <div class="waiting-container" style="margin-top: 16px;">
  <h2>Friends that have Submitted the poll...</h2>
</div>

  <%= turbo_stream_from "plan_#{plan.id}_submitted" %>
  <%= render "plans/submitted", plan: plan %>
</div>
  <div class="waiting-container" style="margin-top: 16px;">
  <h2>Friends that have Not Submitted the poll...</h2>
</div>

  <%= turbo_stream_from "plan_#{plan.id}_not_submitted" %>
  <%= render "plans/not_submitted", plan: plan %>
</div>

<div class="grid-container">
  <%= link_to "Close poll", plan_path(@plan), method: :patch, class: "plans-btn grid-6", data: { turbo_method: :patch, turbo_confirm: "Are you sure you want to close the poll now?" } %>
  <%= link_to "Back", user_plans_path(current_user), class: "plans-btn grid-6" %>
</div>

</div>
</div>
