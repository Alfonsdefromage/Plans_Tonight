<%# <head>
  <link href='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css' rel='stylesheet' />
  <script src='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js'></script>
</head> %>
<script src="https://cdn.jsdelivr.net/npm/@tsparticles/confetti@3.0.3/tsparticles.confetti.bundle.min.js"></script>
<div class="particles-js"  data-controller="confetti-click">
</div>
<div class="grid-container">
  <div class="show-title">
    <div>
      <div class="show-title">
        <div style="display: flex; align-items: center; white-space: nowrap;">
          <h1><span class="big-text">YOUR<br>
              <span class="yellow-text">PLANS<br>
                TONIGHT</span></span><br>
            HAVE BEEN CONFIRMED</h1>
        </div>
      </div>
    </div>
    <!-- Bar Image-->
    <div class="image-bar" style="margin-top: 24px;">
      <div class="image">
        <% @bar.photo %>
        <%= cl_image_tag @bar.photo.key, width: 800, height: 450, crop: :fill, class: "img-fluid", style: "border-radius: 16px;", alt: "Main image" %>
      </div>
    </div>
    <!-- Bar Description -->
    <div class="description-container" style="padding-top: 32px;">
      <div class="bar-description">
        <div style="margin-bottom: 16px;">
          <h2><%= @bar.name.upcase %></h2>
          <h3><i class="fa-solid fa-location-dot" style="color: #FFD74D;"></i> <%= @bar.address %></h3>
        </div>
        <div class="bar-description-details"  style="display: flex; justify-content: space-between;">
          <div class="column-left">
            <% if @plan.date_time < DateTime.now + 1.week %>
              <h3><strong><%= @plan.date_time.strftime("%A") %></strong></h3>
            <% else %>
              <h3><strong></strong><%= @plan.date_time.strftime("%a, %d %b") %></h3>
            <% end %>
            <h3><strong><%= @plan.date_time.strftime("%I:%M%p") %></strong></h3>
            <div class="show-icons">
              <% if @bar.smoking %>
                <i class="fas fa-smoking">  </i>
              <% else %>
                <i class="fas fa-ban">  </i>
              <% end %>
              <% if @bar.food %>
                <i class="fas fa-utensils"></i>
              <% else %>
                <i class="fas fa-ban"></i>
              <% end %>
            </div>
          </div>
          <div class="column-right">
            <h3><strong><%= @bar.mood.upcase %></strong></h3>
            <h3><strong><%= @bar.alcohol.upcase %></strong></h3>
            <h3><strong><%= @bar.price %></strong></h3>
            <h3><strong></strong></h3>
          </div>
        </div>
      </div>
    </div>
    <!-- Add to Calendar -->
    <div class="show-element" style="margin-top: 32px;">
      <%= link_to 'VIEW WEBSITE', @bar.url, class: "plans-btn" %>
    </div>
    <!-- Map -->
    <div style="margin-top: 32px;">
      <h2>MAP</h2>
      <div style="width: 100%; height: 200px; margin-top: 16px;"
        data-controller="map"
        data-map-markers-value="<%= @marker.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_ACCESS_TOKEN'] %>">
      </div>
      <!-- Friends -->
      <div style="margin-top: 32px;">
        <h2>FRIENDS GOING</h2>
      </div>
      <div class="plans-avatar-container" style="margin-bottom: 32px;">
        <% @plan.users.where.not(id: current_user).each do |user| %>
          <div class="avatar-circle">
            <% if user.photo.attached? %>
              <%= cl_image_tag user.photo.key, class: "avatar-photo"  %>
            <% else %>
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" class="avatar-photo" />
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="grid-6">
    <%= link_to "BACK", user_plans_path(current_user), class: "plans-btn", style: "display: flex; width: 90%; justify-content: center; align-items: center;" %>
  </div>
</div>
